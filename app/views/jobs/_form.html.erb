  <div class="uk-margin">
     <%= form.label(:cover_letter_used, {}, {class: 'uk-form-label'}) %>
    <%= form.text_field :cover_letter_used %>
  </div>

  <div class="uk-margin">
     <%= form.label(:resume_used, {}, {class: 'uk-form-label'}) %>
    <%= form.text_field :resume_used %>
  </div>

  <div class="uk-margin">
     <%= form.label(:listing_site, {}, {class: 'uk-form-label'}) %>
    <%= form.text_field :listing_site %>
  </div>

  <div class="uk-margin">
     <%= form.label(:remote_possible, {}, {class: 'uk-form-label'}) %>
    <%= form.check_box :remote_possible %>
  </div>

  
  <div class="uk-margin">
      <%= form.submit 'Create Job', :class => "uk-button uk-button-default" %>
  </div>
<% end %>
