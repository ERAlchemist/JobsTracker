<%= form_with(model: prospect, local: true, class: "uk-form-horizontal uk-margin-large") do |form| %>
  <% if prospect.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(prospect.errors.count, "error") %> prohibited this prospect from being saved:</h2>

      <ul>
      <% prospect.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <div class="uk-margin">
   <%= form.label(:job_title, {}, {class: 'uk-form-label'}) %>
    <%= form.text_field :job_title %>
  </div>

  <div class="uk-margin">
    <%= form.label(:company, {}, {class: 'uk-form-label'}) %>
    <%= form.text_field :company %>
  </div>

  <div class="uk-margin">
    <%= form.label(:link, {}, {class: 'uk-form-label'}) %>
    <%= form.text_field :link %>
  </div>

  <div class="uk-margin">
     <%= form.label(:technologies, {}, {class: 'uk-form-label'}) %>
    <%= form.text_area :technologies %>
  </div>

 <div class="uk-margin">
    <%= form.label(:location, {}, {class: 'uk-form-label'}) %>
    <%= form.text_field :location %>
  </div>


 <div class="uk-margin">
    <%= form.label(:comment, {}, {class: 'uk-form-label'}) %>
    <%= form.text_area :comment %>
  </div>

 <div class="uk-margin">
    <%= form.label(:rating, {}, {class: 'uk-form-label'}) %>
    <%= form.select( :rating, [1,2,3,4,5], {}, {class: 'uk-select-width-medium', id: 'form-horizontal-select'} )  %>
  </div>

  <div class="actions">
    <%= form.submit 'Create Prospect', :class => "uk-button uk-button-default" %>
   
  </div>
