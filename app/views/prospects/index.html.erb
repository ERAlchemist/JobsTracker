<p id="notice"><%= notice %></p>

<h1>Prospects</h1>

<table class="uk-table">
  <thead>
    <tr>
      <th>Job title</th>
      <th>Link</th>
      <th>Technologies</th>
      <th>Location</th>
      <th>Listing site</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prospects.each do |prospect| %>
      <tr>
        <td><%= prospect.job_title %></td>
        <td><%= prospect.link %></td>
        <td><%= prospect.technologies %></td>
        <td><%= prospect.location %></td>
        <td><%= prospect.listing_site %></td>
        <td><%= prospect.comment %></td>
        <td><%= link_to 'Show', prospect %></td>
        <td><%= link_to 'Edit', edit_prospect_path(prospect) %></td>
        <td><%= link_to 'Destroy', prospect, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

